# ChatterBloke Configuration Example
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=ChatterBloke
APP_VERSION=0.1.0
DEBUG=False
LOG_LEVEL=INFO

# Database Settings
DATABASE_URL=sqlite:///data/chatterbloke.db

# Audio Settings
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024
MAX_RECORDING_DURATION=300  # seconds
MAX_AUDIO_FILE_SIZE=104857600  # 100MB in bytes

# Paths
DATA_DIR=data
VOICES_DIR=data/voices
SCRIPTS_DIR=data/scripts
OUTPUTS_DIR=data/outputs
BACKUPS_DIR=data/backups
LOGS_DIR=data/logs

# API Settings
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=False

# Ollama Settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30

# TTS Settings
TTS_DEFAULT_SPEED=1.0
TTS_DEFAULT_PITCH=1.0
TTS_QUEUE_SIZE=10

# UI Settings
THEME=light
FONT_FAMILY=Arial
FONT_SIZE=12
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800

# Backup Settings
BACKUP_ENABLED=True
BACKUP_INTERVAL=86400  # Daily in seconds
BACKUP_RETENTION_DAYS=30